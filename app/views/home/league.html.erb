  body {
    background-color: #06061f;
    background: url(/bg.png);
  }
  
  .table {
    background: rgba(6,6,12,0.5);;
  }
  
  thead tr th {
    color: #ffffff;
  }
  
  tbody tr th {
    color: #3a3a3a;
  }
  
  tbody tr {
    color: #adadad;
  }
  
  tr {
    border-color: #111115;
  }
  
  thead {
    border-color: #111115;
  }
  
  h3 a{
    color: #919191;
    text-decoration: none;
  
  }
  h3 a:hover{
    color: #bdbcbc;
  }
  
  .highlighted a{
    color: #ffffff;
    text-decoration: underline;
  }
  
  .highlighted a:hover{
    color: #ffffff;
  }
  
  .navbar {
    background: #0f0c2a !important;
  }
  
  body > div nav > a{
    color: #fff !important;
  }
  
  .navbar-brand {
    padding-right: 50px;
  }
</style>